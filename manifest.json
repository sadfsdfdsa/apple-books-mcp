{
    "manifest_version": "0.2",
    "name": "Apple Books MCP Extension",
    "version": "1.0.0",
    "description": "Extension to integrate Apple Books with MCP",
    "icon": "icon.png",
    "author": {
        "name": "Artem Shuvaev"
    },
    "server": {
        "type": "node",
        "entry_point": "server/index.js",
        "mcp_config": {
            "command": "node",
            "args": [
                "${__dirname}/server/index.js"
            ]
        }
    }
}